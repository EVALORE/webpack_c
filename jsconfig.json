{
  "compilerOptions": {
    "module": "es6",
    "target": "es2018",
    "baseUrl": "./",
    "paths": {
      "@assets/*": [
        "./src/app/assets/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}